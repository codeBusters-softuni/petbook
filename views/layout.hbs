<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/stylesheets/custom_k.css"/>
    <link rel="stylesheet" href="/stylesheets/custom_resp_k.css"/>

    <script src="/javascripts/jquery-1.10.2.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="/javascripts/custom_script_k.js"></script>

</head>
<body>
<header class="">
    <section class="col-xs-12 col-sm-1 col-lg-4">
        <div class="navbar-header">
            <a href="/" class="">Petbook</a>
        </div>
    </section>
    {{#if this.user}}
        <section class="col-xs-12 col-sm-6 col-lg-4 left-align">
            <form class="form-inline">
                <div class="form-group">
                    <label class="sr-only" for="">Search Field</label>
                    <input type="text" class="input-cstm-style search-cstm" id="" placeholder="Search...">
                    <button type="submit" class="btn btn-secondary sign-in-log-out">Search</button>
                </div>

            </form>
            {{#if this.user.hasRequest}}
              <a href="/friendRequests/">You have a pending friend request!</a>
            {{/if}}
        </section>

        <nav class="col-xs-12 col-sm-5 col-lg-4  left-align">

            <ul class="cstm-menu-header">
                <li><a href="/user/{{user.userId}}">{{user.fullName}}</a></li>
                <li><a href="">Home</a></li>
                <li><a href="/user/logout">LogOut</a></li>
            </ul>
        </nav>
    {{/if}}
    {{#unless this.user}}
        <section class="col-xs-12 col-sm-11 col-lg-8 left-align">
            <form class="form-inline" method="POST" action="/user/login">
                <div class="form-group">
                    <label class="sr-only" for="exampleInputEmail3">Email:</label>
                    <input type="text" class="input-cstm-style" id="" name="email" placeholder="Email" value={{email}}>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="pwd">Password:</label>
                    <input type="password" class="input-cstm-style" id="" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-secondary sign-in-log-out" id="" value="LogIn">
                </div>

            </form>
        </section>
    {{/unless}}

</header>
<main>
    {{{body}}}
</main>
<footer id="cstm-stl-ftr">
    <div>
        <p>&copy; 2016 - codeBusters</p>
    </div>
</footer>

</body>
</html>
