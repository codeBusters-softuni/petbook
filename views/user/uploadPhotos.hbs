<section class="container pic-up-container">

    <section id="upload-photos">
        <h1>You currently don't have any photos.</h1>
        <h2 class="album-tabs active-title">Photos</h2>
        <h2 class="album-tabs">Do you want to create a new album?</h2>
        <h2 class="album-tabs">Or you just want to upload a single photo?</h2>
        <ul>
            <li class="active-section">
                <article id="view-tabs-in-photos" class="cntnr-crte-albm">
                    <div id="container-photo-tabs">
                        <h2 class="photos-tabs active-tab">Your Photos</h2>
                        <h2 class="photos-tabs">Your Albums</h2>
                    </div>

                    <ul>
                        <li class="active-tab-section">
                            <article class="cntnr-photos">
                                bla
                            </article>

                        </li>
                        <li>
                            <article class="cntnr-photos">
                                vla
                            </article>
                        </li>
                    </ul>
                </article>
            </li>
            <li>
                <article class="container-fluid cntnr-crte-albm">
                    <fieldset>
                        <form action="" class="pic-form">
                            <section class="col-xs-12 col-sm-4 col-md-3 float-left-cntr">
                                <article class="form-inputs-style">
                                    <div>
                                        <label for="">Album name</label>
                                        <input type="text" class="cstm-input-register-style input-cstm-style" id=""
                                               value="" placeholder="Title"/>
                                    </div>
                                    <div>
                                        <label for="">Description</label>
                                        <textarea id="" class="cstm-input-register-style input-cstm-style" rows="10"
                                                  cols="100" placeholder="Say something about this album..."></textarea>
                                    </div>
                                    <div class="radio-questions">
                                        <div>
                                            <input type="radio" name="album-check" id="public" value="public-vsbl">
                                            <label for="public">Is this album public?</label>
                                        </div>
                                        <div>
                                            <input type="radio" name="album-check" id="category" value="group-vsbl">
                                            <label for="category">Or is it visible to your category?</label>
                                        </div>
                                        <div>
                                            <input type="radio" name="album-check" id="friends" value="friends-vsbl">
                                            <label for="friends">Or is it visible only to your friends?</label>
                                        </div>
                                    </div>
                                </article>

                            </section>
                            <section class="container-fluid col-xs-12 col-sm-8 col-md-9 float-left-cntr ">
                                <article class="cntr-cntr">
                                    <output></output>

                                    <article class="col-xs-12 col-sm-5 col-md-4 add-photo-button">

                                        <label for="files">
                                            <section class="photo-cntnr add-photo">
                                                <input id="files" type="file" multiple/>
                                            </section>
                                        </label>
                                    </article>
                                </article>

                            </section>
                            <button type="submit" class="btn btn-secondary sign-in-log-out btn-publish">Publish</button>

                        </form>
                    </fieldset>

                </article>
            </li>
            <li>
                <article class="container-fluid cntnr-crte-albm">
                    <fieldset>
                        <form action="" class="pic-form">
                            <section class="col-xs-12 col-sm-4 col-md-3 float-left-cntr">
                                <article class="form-inputs-style">
                                    <div class="radio-questions">
                                        <div>
                                            <input type="radio" name="album-check" id="single-public"
                                                   value="public-vsbl">
                                            <label for="single-public">Are these photos public?</label>
                                        </div>
                                        <div>
                                            <input type="radio" name="album-check" id="single-category"
                                                   value="group-vsbl">
                                            <label for="single-category">Or are they visible to your category?</label>
                                        </div>
                                        <div>
                                            <input type="radio" name="album-check" id="single-friends"
                                                   value="friends-vsbl">
                                            <label for="single-friends">Or are they visible only to your
                                                friends?</label>
                                        </div>
                                    </div>
                                </article>

                            </section>
                            <section class="container col-xs-12 col-sm-8 col-md-9 float-left-cntr cntr-cntr">

                                <output></output>

                                <article class="col-xs-12 col-sm-5 col-md-4 add-photo-button">

                                    <label for="files">
                                        <section class="photo-cntnr add-photo">
                                            <input id="files" type="file" multiple/>
                                        </section>
                                    </label>
                                </article>
                            </section>
                            <button type="submit" class="btn btn-secondary sign-in-log-out btn-publish">Publish</button>
                        </form>
                    </fieldset>
                </article>

            </li>
        </ul>

    </section>
</section>