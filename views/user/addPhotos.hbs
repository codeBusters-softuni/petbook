                                    <div>
                                        <label for="">Description</label>
                                        <textarea id="" class="cstm-input-register-style input-cstm-style" rows="10" cols="100" placeholder="Say something about this picture..."></textarea>
                                        <!--                                                    <input type="text" class="cstm-input-register-style input-cstm-style" id="" value="" placeholder="Say something about that album"/>-->
