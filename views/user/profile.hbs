<div class="wrapper profile-all-container">
    <section id="profile-info" class="profile-pic-container">
        <section id="large-profile-picture" class="large-profile-picture">
                <img src="/images/no-profile-photo.jpg" alt="">
        </section>
        {{#if friendStatus.sentRequest}} {{else if friendStatus.areFriends}}
            <label class="add-friend">Friends</label>
            <form method="POST" action="/friendRequest/{{profileUser.id}}/remove">
                <input type="submit" id="remove-friend" class="button-with-plus remove-friend"
                       value="Cancel Friendship">
            </form>
        {{else}} {{#isSameUser this.user.id profileUser.id}}
            <!-- you can't friend REQ yourself!-->
        {{else}}
            <form method="POST" action="/friendRequest/{{profileUser.id}}/send">
                <input type="submit" id="add-friend" class="button-with-plus add-friend" value="Send Friend Request">
            </form>
        {{/isSameUser}} {{/if}}
        <section class="profile-btns-total">
            <ul>
                <li id="like"></li><span>{{profileUser.totalLikeCount}}</span>
                <li id="love"></li><span>{{profileUser.totalLoveCount}}</span>
                <li id="dislike"></li><span>{{profileUser.totalDislikeCount}}</span>
            </ul>
        </section>
        <section id="user-info" class="user-info">

            <form method="post" action="" enctype="multipart/form-data">
                <article id="bottom-line-post" class="bottom-line-post add-profile-photo-area">
                    <label for="addProfilePhoto" class="add-profile-photo-button">
                        <section class="add-profile-photo add-photo-post">
                            <input type="file" name="addProfilePhoto" class="" id="addProfilePhoto" value=""/>

                        </section>

                    </label>
                    <span>Change your profile photo</span>
                    <section class="">
                        <output id="result-profile-photo">

                        </output>
                    </section>
                    <section class="bottom-bottom-line-post">
                        <input type="submit" id="upload-profile-pic" class="post-btn btn-cstm-style" value="Upload"/>
                    </section>
                    <!--<input type="checkbox" name="publicPost" id="make-public-checkbox" value="public"> Make my post public-->

                </article>
                <!--<article class="bottom-bottom-line-post">-->
                    <!---->
                <!--</article>-->


            </form>



        </section>
    </section>
    <section id="profile-content" class="profile-content">
        <header id="user-names" class="user-names">
            <p><a href="/user/{{profileUser.userId}}">{{profileUser.fullName}}</a></p>
            <p>Owned by <strong>{{profileUser.ownerName}}</strong></p>
        </header>
        <nav id="user-nav"class="user-nav">
            <ul>
                <li id="user-about-nav"><a href="/user/about" class="profile-btn-cstm-style">About</a></li>
                <li id="user-photos-nav"><a href="/user/{{profileUser.userId}}/photos" class="profile-btn-cstm-style">Photos</a></li>
            </ul>
        </nav>
        <!-- Here include addPost.hbs if url is user/id-->
        {{#each posts}}
            <section id="post-view">
                <header>
                    <section>
                        <article>
                            <!--profile picture example: <img src="{dir photo resize width: 30px}"/>-->
                            <a href="/user/{{author.userId}}">{{author.fullName}}</a>
                        </article>
                        <section>
                            <article>
                                {{dateStr}}
                            </article>

                        </section>
                    </section>
                </header>
                <article id="post-content">
                    {{content}}
                </article>

                <article class="cntnr-photos row custom-gallery">
                    {{#each photos}}
                        <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <section class="photo-cntnr">
                                <div class="album-photo-content">
                                    <img src="/uploads/{{this.filename}}" alt="">
                                </div>
                                <footer class="preview-photo-thumbnail-footer">
                                   {{#if ../../this.user}}
                                    <ul>
                                        {{#hasPawed paws ../../this.user._id}}
                                            <form method="post" action="/photo/{{id}}/removePaw">
                                                {{!--SHOULD BE GREY--}}
                                                <li>
                                                    <input type="submit" id="paw" class="btn" value="">{{paws.length}}
                                                </li>
                                            </form>
                                            <form method="post" action="/photo/{{id}}/addLove">
                                                <li>
                                                    <input type="submit" id="love" class="btn" value="">{{loves.length}}
                                                </li>
                                            </form>
                                            <form method="post" action="/photo/{{id}}/addDislike">
                                                <li>
                                                    <input type="submit" id="dislike" class="btn" value="">{{dislikes.length}}
                                                </li>
                                            </form>
                                        {{else}}
                                        {{!--User has not pawed this post--}}
                                            {{#hasLoved loves ../../this.user._id}}
                                                <form method="post" action="/photo/{{id}}/addPaw">
                                                    <li>
                                                        <input type="submit" id="paw" class="btn" value="">{{paws.length}}
                                                    </li>
                                                </form>
                                                <form method="post" action="/photo/{{id}}/removeLove">
                                                    {{!--SHOULD BE GREY--}}
                                                    <li>
                                                        <input type="submit" id="love" class="btn" value="">{{loves.length}}
                                                    </li>
                                                </form>
                                                <form method="post" action="/photo/{{id}}/addDislike">
                                                    <li>
                                                        <input type="submit" id="dislike" class="btn" value="">{{dislikes.length}}
                                                    </li>
                                                </form>
                                            {{else}}
                                            {{!--User has not loved this post--}}
                                                {{#hasDisliked dislikes ../../this.user._id}}
                                                    <form method="post" action="/photo/{{id}}/addPaw">
                                                        <li>
                                                            <input type="submit" id="paw" class="btn" value="">{{paws.length}}
                                                        </li>
                                                    </form>
                                                    <form method="post" action="/photo/{{id}}/addLove">
                                                        <li>
                                                            <input type="submit" id="love" class="btn" value="">{{loves.length}}
                                                        </li>
                                                    </form>
                                                    <form method="post" action="/photo/{{id}}/removeDislike>">
                                                        {{!--SHOULD BE GREY--}}
                                                        <li>
                                                            <input type="submit" id="dislike" class="btn"
                                                                  value="">{{dislikes.length}}
                                                        </li>
                                                    </form>
                                                {{else}}
                                                {{!--User has not liked this post at all--}}
                                                    <form method="post" action="/photo/{{id}}/addPaw">
                                                        <li>
                                                            <input type="submit" id="paw" class="btn" value="">{{paws.length}}
                                                        </li>
                                                    </form>
                                                    <form method="post" action="/photo/{{id}}/addLove">
                                                        <li>
                                                            <input type="submit" id="love" class="btn" value="">{{loves.length}}
                                                        </li>
                                                    </form>
                                                    <form method="post" action="/photo/{{id}}/addDislike">
                                                        <li>
                                                            <input type="submit" id="dislike" class="btn"
                                                                  value="">{{dislikes.length}}
                                                        </li>
                                                    </form>
                                                {{/hasDisliked}}
                                            {{/hasLoved}}
                                        {{/hasPawed}}
                                    </ul>
                                {{/if}}
                                </footer>
                            </section>
                        </article>
                    {{/each}}
                </article>

                <footer class="preview-photo-thumbnail-footer post-btn-newsfeed">
                    {{#if ../this.user}}
                        <ul>
                            {{#hasPawed paws ../this.user._id}}
                                <form method="post" action="/post/{{id}}/removePaw">
                                    {{!--SHOULD BE GREY--}}
                                    <li>
                                        <input type="submit" id="paw" class="btn" value="">{{paws.length}} Paws
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/addLove">
                                    <li>
                                        <input type="submit" id="love" class="btn" value="">{{loves.length}} Loves
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/addDislike">
                                    <li>
                                        <input type="submit" id="dislike" class="btn" value="">{{dislikes.length}}
                                        Dislikes
                                    </li>
                                </form>
                            {{else}} {{!--User has not pawed this post--}} {{#hasLoved loves ../this.user._id}}
                                <form method="post" action="/post/{{id}}/addPaw">
                                    <li>
                                        <input type="submit" id="paw" class="btn" value="">{{paws.length}} Paws
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/removeLove">
                                    {{!--SHOULD BE GREY--}}
                                    <li>
                                        <input type="submit" id="love" class="btn" value="">{{loves.length}} Loves
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/addDislike">
                                    <li>
                                        <input type="submit" id="dislike" class="btn" value="">{{dislikes.length}}
                                        Dislikes
                                    </li>
                                </form>
                            {{else}} {{!--User has not loved this post--}} {{#hasDisliked dislikes ../this.user._id}}
                                <form method="post" action="/post/{{id}}/addPaw">
                                    <li>
                                        <input type="submit" id="paw" class="btn" value="">{{paws.length}} Paws
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/addLove">
                                    <li>
                                        <input type="submit" id="love" class="btn" value="">{{loves.length}} Loves
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/removeDislike>">
                                    {{!--SHOULD BE GREY--}}
                                    <li>
                                        <input type="submit" id="dislike" class="btn" value="">{{dislikes.length}}
                                        Dislikes
                                    </li>
                                </form>
                            {{else}} {{!--User has not liked this post at all--}}
                                <form method="post" action="/post/{{id}}/addPaw">
                                    <li>
                                        <input type="submit" id="paw" class="btn" value="">{{paws.length}} Paws
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/addLove">
                                    <li>
                                        <input type="submit" id="love" class="btn" value="">{{loves.length}} Loves
                                    </li>
                                </form>
                                <form method="post" action="/post/{{id}}/addDislike">
                                    <li>
                                        <input type="submit" id="dislike" class="btn" value="">{{dislikes.length}}
                                        Dislikes
                                    </li>
                                </form>
                            {{/hasDisliked}} {{/hasLoved}} {{/hasPawed}}
                        </ul>
                    {{/if}}
                </footer>
                <section id="comment-view">
                    <!-- COMMENTS -->
                    {{#each comments}}
                        <section>
                            <article>
                                <!--profile picture example: <img src="{dir photo resize width: 30px}"/>-->
                            </article>
                            <section>
                                <article>
                                    {{author.fullName}}
                                </article>
                                <article>
                                    {{dateStr}}
                                </article>
                            </section>
                        </section>
                        <article id="comment-value">
                            {{content}}
                        </article>
                    {{/each}}
                    <!-- END OF COMMENTS -->
                </section>
                <section id="comments-form">
                    <section>
                        <article>
                            <!--profile picture example: <img src="{dir photo resize width: 30px}"/>-->
                        </article>
                        <section id="add-comment">
                            <form method="post" action="/post/{{id}}/addComment">
                                <textarea id="profile-comment" name="content" rows="1"
                                          placeholder="Add a comment"></textarea>
                                <input type="submit" id="comment-btn" value="">
                            </form>
                        </section>
                    </section>
                </section>
            </section>
        {{/each}}
        <main>

            <!-- Here include post view, about, photo gallery or groups views -->
        </main>
    </section>
</div>