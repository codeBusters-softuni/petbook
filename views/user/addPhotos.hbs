                            <article class="col-xs-12 col-sm-5 col-md-4 add-photo-button">
                                <section class="photo-cntnr add-photo">
                                    <a href="" class=""></a>
                                </section>

                            </article>
                        </section>
                    </section>
                    <section class="col-xs-12 col-md-12">
                        <button type="submit" class="btn btn-secondary sign-in-log-out btn-publish">Publish</button>
                    </section>
                </article>

            </li>
        </ul>

    </section>
</section>